# ===========================================
# Ndipaano - Environment Configuration
# ===========================================

# App
NODE_ENV=development
PORT=3001
WEB_PORT=3000
API_URL=http://localhost:3001
WEB_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://ndipaano:ndipaano_dev@localhost:5432/ndipaano?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-jwt-secret-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# 2FA (TOTP)
TOTP_ISSUER=Ndipaano

# Encryption (for medical records)
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here
ENCRYPTION_IV=your-16-byte-hex-iv-here

# File Storage (S3-compatible)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=ndipaano
S3_REGION=us-east-1

# Paystack
PAYSTACK_SECRET_KEY=sk_test_your_key
PAYSTACK_PUBLIC_KEY=pk_test_your_key
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret

# SMS (Africa's Talking)
AT_API_KEY=your_africas_talking_api_key
AT_USERNAME=sandbox
AT_SENDER_ID=Ndipaano

# Email (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@ndipaano.co.zm

# Push Notifications (Expo)
EXPO_ACCESS_TOKEN=your_expo_access_token

# Render (Production)
RENDER_EXTERNAL_URL=
RENDER_INTERNAL_URL=
