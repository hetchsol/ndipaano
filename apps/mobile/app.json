{
  "expo": {
    "name": "Ndiipano",
    "slug": "ndiipano",
    "version": "0.1.0",
    "orientation": "portrait",
    "scheme": "ndiipano",
    "userInterfaceStyle": "light",
    "splash": {
      "backgroundColor": "#166534"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ndiipano.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to find nearby practitioners and enable home visit tracking."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#166534"
      },
      "package": "com.ndiipano.app",
      "permissions": ["ACCESS_FINE_LOCATION", "ACCESS_COARSE_LOCATION"]
    },
    "plugins": [
      "expo-router",
      "expo-location",
      "expo-notifications",
      "expo-secure-store",
      "expo-image-picker"
    ]
  }
}
